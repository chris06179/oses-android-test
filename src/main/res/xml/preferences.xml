<!--                         android:defaultValue="true" -->
<!--                         android:summary="Über neue Ereignisse &amp; Störungen informieren" -->
<!--                         android:key="eventNotification"  -->
<!--                         android:dependency="allowNotification" /> -->
<!--                 <CheckBoxPreference -->
<!--                     	android:enabled="false" -->
<!--                         android:title="Allgemeine Informationen" -->

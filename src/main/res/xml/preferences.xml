<!--                         android:summary="Über allgemeine Informationen (z.B. Neuigkeiten im Betrieb) informieren" -->
<!--                         android:key="infoNotification"  -->
<!--                         android:dependency="allowNotification" /> -->
                 <CheckBoxPreference
                        android:title="Faxversand"
                        android:defaultValue="true"
                        android:summary="Zeige Informationen über den Status des Faxversandes an"
                        android:key="faxNotification" 
                        android:dependency="allowNotification" />
                <CheckBoxPreference
                        android:title="Nachrichten"
                        android:defaultValue="true"
                        android:summary="Über aktuelle Nachrichten in OSES informieren"
                        android:key="newsNotification" 
                        android:dependency="allowNotification" />
                <CheckBoxPreference
                        android:title="Aktualisierung"
                        android:defaultValue="true"
                        android:summary="Über neue Version informieren"
                        android:key="updateNotification" 
                        android:dependency="allowNotification" />
                <CheckBoxPreference
                        android:title="Sonstiges"
                        android:defaultValue="true"
                        android:key="otherNotification" 
                        android:dependency="allowNotification" />
        </PreferenceCategory>

    <PreferenceCategory
        android:title="Sonstiges">
    <PreferenceScreen
        android:key="about"
        android:title="Anwendungsinformationen"
        android:persistent="false">
        <PreferenceCategory
            android:title="Anwendungsinformationen">
            <Preference
                android:key="version"
                android:title="Version">
            </Preference>
            <Preference
                android:key="versioncode"
                android:title="Versionscode">
            </Preference>
            <Preference
                android:key="copyright"
                android:title="Urheberrecht">
            </Preference>
            <Preference
                android:key="contact"
                android:title="Kontakt"
                android:summary="E-Mail an info@oses.mobi">
                <intent
                    android:action="android.intent.action.VIEW"
                    android:data="mailto:info@oses.mobi?subject=OSES Benutzeranfrage">
                </intent>
            </Preference>
        </PreferenceCategory>
    </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_below="@+id/main_toolbar"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <RelativeLayout
        android:id="@+id/start_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/index_progress_card"
            android:layout_below="@+id/main_toolbar"
            android:layout_alignParentStart="true" />

        <include layout="@layout/toolbar" />

        <include
            android:id="@+id/index_progress_card"
            layout="@layout/index_progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <LinearLayout android:id="@+id/left_drawer"

        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#E2E2E2"
        android:elevation="10dp"
        android:orientation="vertical">


        <ListView android:id="@+id/menu_list"
            android:layout_width="280dp"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="#ffdfdfdf"
            android:dividerHeight="1dp"
            android:background="#E2E2E2"
            android:fitsSystemWindows="true" />

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="DEVMODE"
        android:id="@+id/devModeText"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#fff98c"
        android:visibility="gone" />
</RelativeLayout>
